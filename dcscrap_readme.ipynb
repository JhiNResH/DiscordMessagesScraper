  },
  {
   "cell_type": "code",
   "execution_count": 38,
   "metadata": {},
   "outputs": [],
   "source": [
    "worksheet = gc.open_by_key(\"11b2o7N0jn_0bUhUDcrF8u8ciAGmeS9kud06zgb2liOs\").sheet1\n",
    "# your googlesheets key"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 42,
   "metadata": {},
   "outputs": [],
   "source": [
    "keywords = [\"UID\", \"頭條預測\"]\n",
    "channel_id = 1061935943747129355 # replace with the target channel's ID"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 43,
   "metadata": {},
   "outputs": [],
   "source": [
    "@client.event\n",
    "async def on_ready():\n",
    "    channel = client.get_channel(1064084359046508585)\n",
    "    async for message in channel.history(limit=100):\n",
    "        if any(keyword in message.content for keyword in keywords):\n",
    "            print(f\"{message.author} said {message.content} in {channel.name} at {message.created_at}\")\n",
    "    worksheet.append_row([message.author.name, message.content, channel.name, message.created_at.strftime('%Y-%m-%d %H:%M:%S')])\n"
   ]
  },
 
   ],
